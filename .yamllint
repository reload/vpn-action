---

extends: default

ignore-from-file:
  - .gitignore

rules:
  indentation:
    spaces: 2
  line-length: disable
  truthy:
    check-keys: false
    # Allow Drupalism upper case bools.
    allowed-values: ['true', 'false', 'TRUE', 'FALSE']
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
